<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dshubhadeep.expensify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".BudgetActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LabelActivity"
            android:label="@string/title_activity_label" />
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".AddLabelActivity" />
        <activity android:name=".AddExpenseActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".EditExpenseActivity"></activity>
    </application>

</manifest>