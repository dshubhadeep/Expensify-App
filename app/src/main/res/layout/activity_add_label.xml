<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLabelActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Add Label"
        android:textAlignment="center"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/label_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Label name"/>

    <EditText
        android:id="@+id/label_budget_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Label budget"/>

    <android.support.design.button.MaterialButton
        android:id="@+id/add_label_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textStyle="bold"
        />

</LinearLayout>