<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/budget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".BudgetActivity">

    <TextView
        android:id="@+id/app_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/budget_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_header"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:hint="0"
        android:textColor="@android:color/white"
        android:textColorHint="@color/lightWhite"
        android:textSize="42sp"
        app:layout_constraintTop_toBottomOf="@+id/app_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="48dp">


        <android.support.design.button.MaterialButton
            android:id="@+id/set_budget_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/budget_edit_text"
            android:layout_gravity="center_horizontal"
            android:text="Set Budget"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:cornerRadius="4dp" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>